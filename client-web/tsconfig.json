{
  "compilerOptions": {
    "resolveJsonModule": true,    // JSON 모듈 import 허용
    "esModuleInterop": true      // CommonJS/AMD/UMD 모듈을 ES6 모듈처럼 import 허용
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.json"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
